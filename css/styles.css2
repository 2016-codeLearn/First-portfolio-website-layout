@media(min-width: 768px) {


	main {
		/*background-color: green;*/
		width: 80%;
		margin: 0 auto;
		height: 100vh;
		overflow: scroll;

		
	}

	.scroll {
		display: flex;
		overflow: scroll;
	
	}
	.container {
	/*	border: 1px solid lightcoral;*/
		flex-direction: flex-end;
		width: 100%;
		height: 400px;
	}
	.paragraph {
		justify-content: center;
		padding-top: 6px;
		padding-left: 36px;
		padding-right: 30px;
	}
	.title {
		top: 0;
		text-transform: uppercase;
		font-family: helvetica;
		color: #4f4f48;
	}
	.link {
		padding-top: 10px;
		width: 100%;
	}

	.link a {
		text-transform: uppercase;
		text-decoration: none;
		font-family: futura;
		color: #0f6f83;
		font-size: 9.5pt;
		margin-left: 10px;

	}
	.graphic {
		display: flex;
		flex-direction: column;
	}
	.paragraph b {
		font-family: giddy up;
		font-size: 36pt;
	}
	.link img {
		justify-content: flex-start;
		width: 100%;
	}


}





/**---------------largest Dispay Devices starts----------*/

@media(min-width: 1244px) {

	main {
		/*background-color: green;*/
		width: 50%;
		margin: 0 auto;
		height: 100vh;
		overflow: hidden;	
	}
	.scroll {
		display: flex;
		overflow: hidden;

	}
	.container {
		padding-top: 40px;
		border-top: 1px solid #0b849a;
		max-width: 100%;
		height: 940px;
		flex-wrap: wrap;
		align-content: space-around;
		flex-direction: column;
		justify-content: flex-start;
	}
	.graphic {
		margin-bottom: 20px;
	}
	.link {
		padding-top: 10px;
		width: 86%;	
	}
	.graphic a {
		text-transform: uppercase;
		text-decoration: none;
		font-family: futura;
		color: #666662;
		font-size: 9.5pt;
		letter-spacing: 2pt;
	}
	.label {
		margin-left: 100px;
	}

}

