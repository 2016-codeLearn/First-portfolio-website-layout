
/** {
	Portal css start
}*/

body { 
	background-image: url(../img/480.png);
	background-repeat: no-repeat;
	background-position: inherit;
	background-size: cover;
	position: fixed;
	top: 0px;
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	z-index: -9000;
}


.parent {

	height: 100%;
}

.item {
	font-family: futura;
	/*background-color: green;*/
	text-align: center;
	font-weight: 300;

}
.parent {
	display: flex;
	flex-direction: column;

}
.item {
	padding: 10px 0;
	width: 100%;
	height: 100px;
}
.item:nth-child(1) {
	margin-top: 42px;
	font-size: 10pt;
	color: #0cbbe1;
	
}
.item:nth-child(2) {
	margin-top: -30px;
	line-height: 36px;
	font-size: 12pt;
	color: #0cbbe1;
}
.item:nth-child(3) {
	margin-top: -58px;
	line-height: 16pt;
	font-size: 9pt;
	color: #777787;
	text-transform: lowercase;

}
.item:nth-child(4) {
	margin-top: 30px;
}


body span {
	text-transform: normal;
	font-family: Khmer Sangam MN;
	font-weight: lighter;
}
body a{
	margin-top: 12px;
	text-decoration: none;
	border: 1px solid #777787;
	border-radius: 3px;
	padding: 13px;
	color: #0cbbe1;
}

